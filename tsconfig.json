{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "removeComments": true,
        "downlevelIteration": true,
        "declaration": false,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
, "client.ts"    ],
    "exclude": [
        "node_modules"
    ]
}